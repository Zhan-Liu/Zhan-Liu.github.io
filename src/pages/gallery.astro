  text-shadow: 0 0 8px rgba(0, 0, 0, 0.8) !important; /* 添加深色阴影，增加对比度 */
  opacity: 1 !important;       /* 确保完全不透明 */
  cursor: pointer !important;  /* 鼠标悬停显示手型光标 */
  z-index: 1000000 !important; /* 确保在所有内容之上 */
}

